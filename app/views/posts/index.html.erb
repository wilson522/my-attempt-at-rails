   <main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Hello, world!</h1>
        <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        <p><%= link_to 'New Post', new_post_path ,:class =>'btn btn-primary btn-lg' %></p>
      </div>
    </div>

    <% @posts.each do |post| %>
    <div class="container">

     <!-- Example row of columns -->
     <div class="row">
      <div class="col-md-3">
        <h2><%= post.name %></h2>
      </div>
      <div class="col-md-3">
        <strong><%= post.title %></strong>
      </div>
      <div class="col-md-3">
        <strong><%= post.body %></strong>
      </div>
      <div class="col-md-1">
        <strong><%= link_to 'Show', post, :class =>'btn btn-secondary' %></strong>
      </div>
       <div class="col-md-1">
        <strong><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-primary' %></strong>
      </div>
       <div class="col-md-1">
        <strong><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></strong>
      </div>


    </div>
    <hr>

  </div> <!-- /container -->
  <% end -%>

  </main>
